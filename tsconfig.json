{
  "compilerOptions": {
    "strict": true,
    "target": "ES2018",
    "rootDir": "src",
    "declaration": true,
    "noImplicitAny": true,
    "declarationDir": "build",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
